          "type": "integer"
        },
        "userId": {
          "type": "integer"
        },
        "total": {
          "type": "number"
        },
        "status": {
          "type": "string"
        }
      },
      "description": "Order model"
    },
    "CreateOrderRequest": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "integer"
              },
              "quantity": {
                "type": "integer"
              }
            }
          }
        }
      },
      "required": ["userId", "items"]
