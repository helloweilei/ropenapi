          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "description": "User model"
    },
    "CreateUserRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": ["name", "email"]
    },
    "UserListResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "total": {
          "type": "integer"
        }
      }
    },
    "Order": {
      "type": "object",
      "properties": {
